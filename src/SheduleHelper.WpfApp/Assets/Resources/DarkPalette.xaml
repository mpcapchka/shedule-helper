<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ========================= -->
    <!--      LAYER BACKGROUNDS    -->
    <!-- ========================= -->

    <SolidColorBrush x:Key="LayerBackgroundBaseBrush" x:Shared="False"      Color="#FF1A1A1A"/>
    <SolidColorBrush x:Key="LayerBackgroundSubtleBrush" x:Shared="False"    Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="LayerBackgroundFloatingBrush" x:Shared="False"  Color="#FF242424"/>
    <SolidColorBrush x:Key="LayerBackgroundElevatedBrush" x:Shared="False"  Color="#FF2A2A2A"/>

    <SolidColorBrush x:Key="LayerBorderDefaultBrush" x:Shared="False"       Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="LayerBorderSubtleBrush" x:Shared="False"        Color="#FF2E2E2E"/>
    <SolidColorBrush x:Key="LayerDividerBrush" x:Shared="False"             Color="#33FFFFFF"/>

    <!-- ========================= -->
    <!--   DEFAULT CONTROL BRUSHES -->
    <!-- ========================= -->

    <!-- Foreground -->
    <SolidColorBrush x:Key="DefaultControlForegroundDefaultBrush" x:Shared="False"  Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DefaultControlForegroundHoverBrush" x:Shared="False"    Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DefaultControlForegroundPressedBrush" x:Shared="False"  Color="#FFFFFFFF"/>
    <system:Double x:Key="DefaultControlDisabledOpacity" x:Shared="False">0.8</system:Double>

    <!-- Background -->
    <SolidColorBrush x:Key="DefaultControlBackgroundDefaultBrush" x:Shared="False"  Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="DefaultControlBackgroundHoverBrush" x:Shared="False"    Color="#FF333333"/>
    <SolidColorBrush x:Key="DefaultControlBackgroundPressedBrush" x:Shared="False"  Color="#FF3D3D3D"/>
    <SolidColorBrush x:Key="DefaultControlBackgroundDisabledBrush" x:Shared="False" Color="#332A2A2A"/>

    <!-- Border -->
    <SolidColorBrush x:Key="DefaultControlBorderDefaultBrush" x:Shared="False"      Color="#FF555555"/>
    <SolidColorBrush x:Key="DefaultControlBorderHoverBrush" x:Shared="False"        Color="#FF777777"/>
    <SolidColorBrush x:Key="DefaultControlBorderPressedBrush" x:Shared="False"      Color="#FF888888"/>
    <SolidColorBrush x:Key="DefaultControlBorderDisabledBrush" x:Shared="False"     Color="#33555555"/>

    <!-- ========================= -->
    <!--   PRIMARY CONTROL BRUSHES -->
    <!-- ========================= -->

    <!-- Orange Accent Family -->
    <SolidColorBrush x:Key="PrimaryControlForegroundDefaultBrush" x:Shared="False"  Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="PrimaryControlForegroundHoverBrush" x:Shared="False"    Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="PrimaryControlForegroundPressedBrush" x:Shared="False"  Color="#FFFFFFFF"/>
    <system:Double x:Key="PrimaryControlDisabledOpacity" x:Shared="False">0.8</system:Double>

    <SolidColorBrush x:Key="PrimaryControlBackgroundDefaultBrush" x:Shared="False"  Color="#FFFF6A2C"/>
    <SolidColorBrush x:Key="PrimaryControlBackgroundHoverBrush" x:Shared="False"    Color="#FFFF8753"/>
    <SolidColorBrush x:Key="PrimaryControlBackgroundPressedBrush" x:Shared="False"  Color="#FFE55621"/>
    <SolidColorBrush x:Key="PrimaryControlBackgroundDisabledBrush" x:Shared="False" Color="#33FF6A2C"/>

    <SolidColorBrush x:Key="PrimaryControlBorderDefaultBrush" x:Shared="False"      Color="#FFE55621"/>
    <SolidColorBrush x:Key="PrimaryControlBorderHoverBrush" x:Shared="False"        Color="#FFFF8753"/>
    <SolidColorBrush x:Key="PrimaryControlBorderPressedBrush" x:Shared="False"      Color="#FFE55621"/>
    <SolidColorBrush x:Key="PrimaryControlBorderDisabledBrush" x:Shared="False"     Color="#33E55621"/>

    <!-- ========================= -->
    <!--    ACCENT PRIMARY/SEC    -->
    <!-- ========================= -->

    <SolidColorBrush x:Key="AccentPrimaryBrush" x:Shared="False"            Color="#FFFF6A2C"/>
    <SolidColorBrush x:Key="AccentPrimaryHoverBrush" x:Shared="False"       Color="#FFFF8753"/>
    <SolidColorBrush x:Key="AccentPrimaryPressedBrush" x:Shared="False"     Color="#FFE55621"/>
    <SolidColorBrush x:Key="AccentPrimaryDisabledBrush" x:Shared="False"    Color="#33FF6A2C"/>

    <SolidColorBrush x:Key="AccentSecondaryBrush" x:Shared="False"          Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="AccentSecondaryHoverBrush" x:Shared="False"     Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="AccentSecondaryPressedBrush" x:Shared="False"   Color="#FF888888"/>
    <SolidColorBrush x:Key="AccentSecondaryDisabledBrush" x:Shared="False"  Color="#33888888"/>

    <!-- ========================= -->
    <!-- INPUT CONTROL BRUSHES -->
    <!-- (Focused = Accent) -->
    <!-- ========================= -->

    <!-- Foreground -->
    <SolidColorBrush x:Key="InputControlForegroundDefaultBrush" x:Shared="False" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="InputControlForegroundFocusedBrush" x:Shared="False" Color="#FFFF6A2C"/>
    <system:Double x:Key="InputControlDisabledOpacity" x:Shared="False">0.8</system:Double>
    <SolidColorBrush x:Key="InputControlForegroundErrorBrush" x:Shared="False" Color="#FFFF4A4A"/>
    <SolidColorBrush x:Key="InputControlForegroundSuccessBrush" x:Shared="False" Color="#FF57D27C"/>

    <!-- Background -->
    <SolidColorBrush x:Key="InputControlBackgroundDefaultBrush" x:Shared="False" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="InputControlBackgroundHoverBrush" x:Shared="False"   Color="#FF333333"/>
    <SolidColorBrush x:Key="InputControlBackgroundFocusedBrush" x:Shared="False" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="InputControlBackgroundDisabledBrush" x:Shared="False" Color="#332A2A2A"/>
    <SolidColorBrush x:Key="InputControlBackgroundErrorBrush" x:Shared="False"   Color="#33FF4A4A"/>
    <SolidColorBrush x:Key="InputControlBackgroundSuccessBrush" x:Shared="False" Color="#3342C76A"/>

    <!-- Border -->
    <SolidColorBrush x:Key="InputControlBorderDefaultBrush" x:Shared="False" Color="#FF555555"/>
    <SolidColorBrush x:Key="InputControlBorderHoverBrush" x:Shared="False"   Color="#FF777777"/>
    <SolidColorBrush x:Key="InputControlBorderFocusedBrush" x:Shared="False" Color="#FFFF6A2C"/>
    <SolidColorBrush x:Key="InputControlBorderDisabledBrush" x:Shared="False" Color="#33555555"/>
    <SolidColorBrush x:Key="InputControlBorderErrorBrush" x:Shared="False"   Color="#FFFF4A4A"/>
    <SolidColorBrush x:Key="InputControlBorderSuccessBrush" x:Shared="False" Color="#FF42C76A"/>

    <!-- Caret -->
    <SolidColorBrush x:Key="InputControlCaretDefaultBrush" x:Shared="False"  Color="#FFFF6A2C"/>
    <SolidColorBrush x:Key="InputControlCaretDisabledBrush" x:Shared="False" Color="#44FFFFFF"/>
    <SolidColorBrush x:Key="InputControlCaretErrorBrush" x:Shared="False"    Color="#FFFF4A4A"/>
    <SolidColorBrush x:Key="InputControlCaretSuccessBrush" x:Shared="False"  Color="#FF42C76A"/>

    <!-- ========================= -->
    <!-- SEMANTIC STATES -->
    <!-- ========================= -->

    <!-- Success -->
    <SolidColorBrush x:Key="SuccessForegroundBrush" x:Shared="False"  Color="#FF42C76A"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" x:Shared="False"  Color="#3342C76A"/>
    <SolidColorBrush x:Key="SuccessBorderBrush" x:Shared="False"      Color="#FF42C76A"/>
    <SolidColorBrush x:Key="SuccessAccentBrush" x:Shared="False"      Color="#FF57D27C"/>

    <!-- Error -->
    <SolidColorBrush x:Key="ErrorForegroundBrush" x:Shared="False"  Color="#FFFF4A4A"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" x:Shared="False"  Color="#33FF4A4A"/>
    <SolidColorBrush x:Key="ErrorBorderBrush" x:Shared="False"      Color="#FFFF4A4A"/>
    <SolidColorBrush x:Key="ErrorAccentBrush" x:Shared="False"      Color="#FFFF6A6A"/>

    <!-- Warning -->
    <SolidColorBrush x:Key="WarningForegroundBrush" x:Shared="False" Color="#FFFFB94A"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" x:Shared="False" Color="#33FFB94A"/>
    <SolidColorBrush x:Key="WarningBorderBrush" x:Shared="False"     Color="#FFFFB94A"/>
    <SolidColorBrush x:Key="WarningAccentBrush" x:Shared="False"     Color="#FFFFC76F"/>

    <!-- Info -->
    <SolidColorBrush x:Key="InfoForegroundBrush" x:Shared="False" Color="#FF58AFFF"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" x:Shared="False" Color="#3358AFFF"/>
    <SolidColorBrush x:Key="InfoBorderBrush" x:Shared="False"     Color="#FF58AFFF"/>
    <SolidColorBrush x:Key="InfoAccentBrush" x:Shared="False"     Color="#FF72BDFF"/>

</ResourceDictionary>
