<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================ -->
    <!--   DEFAULT PROGRESSBAR STYLE                     -->
    <!--   Material Design ProgressBar                    -->
    <!-- ================================================ -->

    <Style x:Key="DefaultProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Background" Value="{DynamicResource DefaultControlBackgroundDefaultBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultControlBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="MinHeight" Value="8"/>
        <Setter Property="IsTabStop" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <!-- Background Track -->
                        <Border x:Name="TrackBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True"/>

                        <!-- Progress Indicator -->
                        <Border x:Name="PART_Track"
                                CornerRadius="4"
                                ClipToBounds="True">
                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left"
                                    SnapsToDevicePixels="True"/>
                        </Border>

                        <!-- Indeterminate Animation (Windows 11 Style) -->
                        <Border x:Name="IndeterminateBorder"
                                Background="Transparent"
                                CornerRadius="4"
                                ClipToBounds="True"
                                Visibility="Collapsed">
                            <Canvas>
                                <!-- Short Bar Segment -->
                                <Border x:Name="ShortBar"
                                        Background="{TemplateBinding Foreground}"
                                        Width="300"
                                        Height="{TemplateBinding Height}"
                                        CornerRadius="4"
                                        Canvas.Left="-120"
                                        RenderTransformOrigin="0,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform x:Name="ShortBarScale" ScaleX="0.05"/>
                                    </Border.RenderTransform>
                                </Border>
                                <!-- Long Bar Segment -->
                                <Border x:Name="LongBar"
                                        Background="{TemplateBinding Foreground}"
                                        Width="300"
                                        Height="{TemplateBinding Height}"
                                        CornerRadius="4"
                                        Canvas.Left="-270"
                                        RenderTransformOrigin="0,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform x:Name="LongBarScale" ScaleX="0.05"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Canvas>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Indeterminate State -->
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="PART_Indicator" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IndeterminateBorder" Property="Visibility" Value="Visible"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <!-- SHORT BAR: Position Animation -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ShortBar"
                                                                      Storyboard.TargetProperty="(Canvas.Left)"
                                                                      Duration="0:0:2"
                                                                      RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-120">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="360">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="360">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>

                                        <!-- SHORT BAR: ScaleX Animation -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ShortBarScale"
                                                                      Storyboard.TargetProperty="ScaleX"
                                                                      Duration="0:0:2"
                                                                      RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.05">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.3">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.8">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="0.4">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.05">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>

                                        <!-- LONG BAR: Position Animation -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LongBar"
                                                                      Storyboard.TargetProperty="(Canvas.Left)"
                                                                      Duration="0:0:2"
                                                                      RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-270">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.75" Value="-270">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="300">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>

                                        <!-- LONG BAR: ScaleX Animation -->
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LongBarScale"
                                                                      Storyboard.TargetProperty="ScaleX"
                                                                      Duration="0:0:2"
                                                                      RepeatBehavior="Forever">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.05">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0.2">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.75" Value="0.8">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0.5">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.05">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="TrackBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="TrackBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderDisabledBrush}"/>
                            <Setter TargetName="PART_Indicator" Property="Background"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="PART_Indicator" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ProgressBar" BasedOn="{StaticResource DefaultProgressBarStyle}"/>

    <!-- ================================================ -->
    <!--   DEFAULT TOOLTIP STYLE                         -->
    <!--   Material Design ToolTip                        -->
    <!-- ================================================ -->

    <Style x:Key="DefaultToolTipStyle" TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="{DynamicResource LayerBackgroundElevatedBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LayerBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Placement" Value="Top"/>
        <Setter Property="HorizontalOffset" Value="0"/>
        <Setter Property="VerticalOffset" Value="-5"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border x:Name="MainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                            Opacity="0.3"
                                            BlurRadius="8"
                                            ShadowDepth="2"
                                            Direction="270"/>
                        </Border.Effect>

                        <ContentPresenter HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        TextBlock.Foreground="{TemplateBinding Foreground}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="HasDropShadow" Value="False">
                            <Setter TargetName="MainBorder" Property="Effect" Value="{x:Null}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Fade-in animation -->
        <Style.Triggers>
            <EventTrigger RoutedEvent="ToolTip.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                       From="0"
                                       To="1"
                                       Duration="0:0:0.15">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ToolTip" BasedOn="{StaticResource DefaultToolTipStyle}"/>

</ResourceDictionary>
