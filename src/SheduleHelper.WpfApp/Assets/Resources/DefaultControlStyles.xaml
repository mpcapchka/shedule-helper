    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}"/>

    <!-- ================================================ -->
    <!--   HYPERLINK BUTTON STYLE                        -->
    <!--   Button styled as a hyperlink                   -->
    <!-- ================================================ -->

    <Style x:Key="HyperlinkButtonStyle" TargetType="{x:Type Button}">
        <!-- Base Properties -->
        <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent">
                        <Border x:Name="UnderlineBorder"
                                BorderBrush="{TemplateBinding Foreground}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}"
                                Opacity="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentPresenter"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            RecognizesAccessKey="True"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>

                        <ContentPresenter x:Name="NormalContentPresenter"
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        RecognizesAccessKey="True"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                            <Setter TargetName="UnderlineBorder" Property="Opacity" Value="1"/>
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                            <Setter TargetName="UnderlineBorder" Property="Opacity" Value="1"/>
                        </Trigger>

                        <!-- Focus State -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="UnderlineBorder" Property="Opacity" Value="1"/>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="ContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                            <Setter TargetName="NormalContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================ -->
    <!--   DEFAULT TOGGLEBUTTON STYLE                    -->
    <!--   Material Design ToggleButton                   -->
    <!-- ================================================ -->

    <Style x:Key="DefaultToggleButtonStyle" TargetType="{x:Type ToggleButton}">
        <!-- Base Properties -->
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="Background" Value="{DynamicResource DefaultControlBackgroundDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultControlBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid>
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">

                            <ContentPresenter x:Name="ContentPresenter"
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            RecognizesAccessKey="True"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>

                        <Border x:Name="FocusBorder"
                                BorderBrush="{DynamicResource AccentPrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="4"
                                Opacity="0"
                                IsHitTestVisible="False"
                                SnapsToDevicePixels="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Unchecked Hover State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="False"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Unchecked Pressed State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="False"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderPressedBrush}"/>
                        </MultiTrigger>

                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource PrimaryControlBackgroundDefaultBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryControlBorderDefaultBrush}"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource PrimaryControlForegroundDefaultBrush}"/>
                        </Trigger>

                        <!-- Checked Hover State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource PrimaryControlBackgroundHoverBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryControlBorderHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Checked Pressed State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource PrimaryControlBackgroundPressedBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryControlBorderPressedBrush}"/>
                        </MultiTrigger>

                        <!-- Focus State -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderDisabledBrush}"/>
                            <Setter TargetName="ContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                        <!-- Disabled Checked State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{DynamicResource PrimaryControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryControlBorderDisabledBrush}"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ToggleButton" BasedOn="{StaticResource DefaultToggleButtonStyle}"/>

    <!-- ================================================ -->
    <!--   DEFAULT SLIDER STYLE                          -->
    <!--   Material Design Slider                         -->
    <!-- ================================================ -->

    <!-- Slider Thumb Style -->
    <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Width" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Ellipse x:Name="ThumbEllipse"
                             Fill="{DynamicResource AccentPrimaryBrush}"
                             Stroke="{DynamicResource AccentPrimaryBrush}"
                             StrokeThickness="0"
                             SnapsToDevicePixels="True"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbEllipse" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbEllipse" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ThumbEllipse" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="ThumbEllipse" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider RepeatButton Style (Track) -->
    <Style x:Key="SliderRepeatButtonStyle" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Horizontal Slider Template -->
    <ControlTemplate x:Key="HorizontalSlider" TargetType="{x:Type Slider}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Track Background -->
            <Border x:Name="TrackBackground"
                    Grid.Row="1"
                    Height="4"
                    Background="{DynamicResource DefaultControlBackgroundDefaultBrush}"
                    BorderBrush="{DynamicResource DefaultControlBorderDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    VerticalAlignment="Center"
                    SnapsToDevicePixels="True"/>

            <!-- Progress Track -->
            <Border x:Name="ProgressTrack"
                    Grid.Row="1"
                    Height="4"
                    Background="{DynamicResource AccentPrimaryBrush}"
                    CornerRadius="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SnapsToDevicePixels="True"/>

            <!-- Track with Thumb -->
            <Track x:Name="PART_Track" Grid.Row="1">
                <Track.DecreaseRepeatButton>
                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Command="Slider.DecreaseLarge"/>
                </Track.DecreaseRepeatButton>
                <Track.IncreaseRepeatButton>
                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Command="Slider.IncreaseLarge"/>
                </Track.IncreaseRepeatButton>
                <Track.Thumb>
                    <Thumb x:Name="Thumb" Style="{StaticResource SliderThumbStyle}"/>
                </Track.Thumb>
            </Track>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="TrackBackground" Property="Opacity" Value="0.6"/>
                <Setter TargetName="ProgressTrack" Property="Background"
                        Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                <Setter TargetName="ProgressTrack" Property="Opacity" Value="0.6"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Vertical Slider Template -->
    <ControlTemplate x:Key="VerticalSlider" TargetType="{x:Type Slider}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" MinWidth="{TemplateBinding MinWidth}"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Track Background -->
            <Border x:Name="TrackBackground"
                    Grid.Column="1"
                    Width="4"
                    Background="{DynamicResource DefaultControlBackgroundDefaultBrush}"
                    BorderBrush="{DynamicResource DefaultControlBorderDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    HorizontalAlignment="Center"
                    SnapsToDevicePixels="True"/>

            <!-- Progress Track -->
            <Border x:Name="ProgressTrack"
                    Grid.Column="1"
                    Width="4"
                    Background="{DynamicResource AccentPrimaryBrush}"
                    CornerRadius="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    SnapsToDevicePixels="True"/>

            <!-- Track with Thumb -->
            <Track x:Name="PART_Track" Grid.Column="1">
                <Track.DecreaseRepeatButton>
                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Command="Slider.DecreaseLarge"/>
                </Track.DecreaseRepeatButton>
                <Track.IncreaseRepeatButton>
                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}" Command="Slider.IncreaseLarge"/>
                </Track.IncreaseRepeatButton>
                <Track.Thumb>
                    <Thumb x:Name="Thumb" Style="{StaticResource SliderThumbStyle}"/>
                </Track.Thumb>
            </Track>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="TrackBackground" Property="Opacity" Value="0.6"/>
                <Setter TargetName="ProgressTrack" Property="Background"
                        Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                <Setter TargetName="ProgressTrack" Property="Opacity" Value="0.6"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Slider Style -->
    <Style x:Key="DefaultSliderStyle" TargetType="{x:Type Slider}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="MinHeight" Value="18"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="Template" Value="{StaticResource HorizontalSlider}"/>
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="MinWidth" Value="18"/>
                <Setter Property="MinHeight" Value="100"/>
                <Setter Property="Template" Value="{StaticResource VerticalSlider}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Slider" BasedOn="{StaticResource DefaultSliderStyle}"/>

    <!-- ================================================ -->
    <!--   SCROLLBAR STYLES                              -->
    <!--   Material Design ScrollBar                      -->
    <!-- ================================================ -->

    <!-- ScrollBar RepeatButton (Arrow Buttons) - Hidden by default for modern look -->
    <Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border Background="Transparent" Width="0" Height="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ScrollBar PageButton (Track Click Areas) -->
    <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ScrollBar Thumb -->
    <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="ThumbBorder"
                            Background="{DynamicResource DefaultControlBorderDefaultBrush}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="4"
                            SnapsToDevicePixels="True"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBorderHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBorderPressedBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Vertical ScrollBar -->
    <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>

            <!-- Top Arrow Button (Hidden) -->
            <RepeatButton Grid.Row="0"
                          Style="{StaticResource ScrollBarLineButton}"
                          Command="ScrollBar.LineUpCommand"/>

            <!-- Track -->
            <Track x:Name="PART_Track"
                   Grid.Row="1"
                   IsDirectionReversed="True">
                <Track.DecreaseRepeatButton>
                    <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                  Command="ScrollBar.PageUpCommand"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}"
                           Margin="2,0,2,0"
                           Width="8"/>
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                  Command="ScrollBar.PageDownCommand"/>
                </Track.IncreaseRepeatButton>
            </Track>

            <!-- Bottom Arrow Button (Hidden) -->
            <RepeatButton Grid.Row="2"
                          Style="{StaticResource ScrollBarLineButton}"
                          Command="ScrollBar.LineDownCommand"/>
        </Grid>
    </ControlTemplate>

    <!-- Horizontal ScrollBar -->
    <ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Left Arrow Button (Hidden) -->
            <RepeatButton Grid.Column="0"
                          Style="{StaticResource ScrollBarLineButton}"
                          Command="ScrollBar.LineLeftCommand"/>

            <!-- Track -->
            <Track x:Name="PART_Track"
                   Grid.Column="1"
                   IsDirectionReversed="False">
                <Track.DecreaseRepeatButton>
                    <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                  Command="ScrollBar.PageLeftCommand"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}"
                           Margin="0,2,0,2"
                           Height="8"/>
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                  Command="ScrollBar.PageRightCommand"/>
                </Track.IncreaseRepeatButton>
            </Track>

            <!-- Right Arrow Button (Hidden) -->
            <RepeatButton Grid.Column="2"
                          Style="{StaticResource ScrollBarLineButton}"
                          Command="ScrollBar.LineRightCommand"/>
        </Grid>
    </ControlTemplate>

    <!-- ScrollBar Style -->
    <Style x:Key="DefaultScrollBarStyle" TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}"/>
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="Auto"/>
                <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ScrollBar" BasedOn="{StaticResource DefaultScrollBarStyle}"/>

    <!-- ================================================ -->
    <!--   SCROLLVIEWER STYLE                            -->
    <!--   To use custom ScrollBars in ScrollViewer      -->
    <!-- ================================================ -->

    <Style x:Key="DefaultScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Content -->
                        <ScrollContentPresenter Grid.Column="0" Grid.Row="0"
                                                CanContentScroll="{TemplateBinding CanContentScroll}"/>

                        <!-- Vertical ScrollBar -->
                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                   Grid.Column="1" Grid.Row="0"
                                   Orientation="Vertical"
                                   Value="{TemplateBinding VerticalOffset}"
                                   Maximum="{TemplateBinding ScrollableHeight}"
                                   ViewportSize="{TemplateBinding ViewportHeight}"
                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                        <!-- Horizontal ScrollBar -->
                        <ScrollBar x:Name="PART_HorizontalScrollBar"
                                   Grid.Column="0" Grid.Row="1"
                                   Orientation="Horizontal"
                                   Value="{TemplateBinding HorizontalOffset}"
                                   Maximum="{TemplateBinding ScrollableWidth}"
                                   ViewportSize="{TemplateBinding ViewportWidth}"
                                   Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================ -->
    <!--   DEFAULT COMBOBOX STYLE                        -->
    <!--   Material Design ComboBox                       -->
    <!-- ================================================ -->

    <!-- ComboBox Toggle Button Style -->
    <Style x:Key="ComboBoxToggleButtonStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Arrow Icon -->
                            <Path x:Name="Arrow"
                                  Grid.Column="1"
                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem Style -->
    <Style x:Key="DefaultComboBoxItemStyle" TargetType="{x:Type ComboBoxItem}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Border x:Name="ItemBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="ContentPresenter"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                        </Trigger>
                        <!-- Selected State -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{DynamicResource AccentPrimaryBrush}"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource PrimaryControlForegroundDefaultBrush}"/>
                        </Trigger>
                        <!-- Selected + Hover State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                        </MultiTrigger>
                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource DefaultComboBoxItemStyle}"/>

    <!-- ComboBox Style -->
    <Style x:Key="DefaultComboBoxStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="Background" Value="{DynamicResource DefaultControlBackgroundDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultControlBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <!-- Toggle Button -->
                        <ToggleButton x:Name="ToggleButton"
                                    Style="{StaticResource ComboBoxToggleButtonStyle}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Focusable="False"
                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    ClickMode="Press"/>

                        <!-- Content Presenter -->
                        <ContentPresenter x:Name="ContentSite"
                                        IsHitTestVisible="False"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>

                        <!-- Editable TextBox -->
                        <TextBox x:Name="PART_EditableTextBox"
                                Style="{x:Null}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                Focusable="True"
                                Background="Transparent"
                                Foreground="{TemplateBinding Foreground}"
                                BorderThickness="0"
                                Visibility="Hidden"
                                IsReadOnly="{TemplateBinding IsReadOnly}"/>

                        <!-- Popup -->
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Fade">
                            <Grid x:Name="DropDown"
                                  MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                  SnapsToDevicePixels="True">
                                <Border x:Name="DropDownBorder"
                                        Background="{DynamicResource LayerBackgroundElevatedBrush}"
                                        BorderBrush="{DynamicResource LayerBorderDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="0,4,0,0"
                                        SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" ShadowDepth="2" Direction="270"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="4"
                                                Style="{StaticResource DefaultScrollViewerStyle}">
                                        <StackPanel IsItemsHost="True"
                                                  KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>

                        <!-- Focus Border -->
                        <Border x:Name="FocusBorder"
                                BorderBrush="{DynamicResource AccentPrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="4"
                                Opacity="0"
                                IsHitTestVisible="False"
                                SnapsToDevicePixels="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- HasItems -->
                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                        </Trigger>

                        <!-- IsGrouping -->
                        <Trigger Property="IsGrouping" Value="True">
                            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                        </Trigger>

                        <!-- Editable -->
                        <Trigger Property="IsEditable" Value="True">
                            <Setter Property="IsTabStop" Value="False"/>
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                        </Trigger>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ToggleButton" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            <Setter TargetName="ToggleButton" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderHoverBrush}"/>
                        </Trigger>

                        <!-- Focus State -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ToggleButton" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="ToggleButton" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderDisabledBrush}"/>
                            <Setter TargetName="ContentSite" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}"/>

    <!-- ================================================ -->
    <!--   DEFAULT CHECKBOX STYLE                        -->
    <!--   Material Design Checkbox                       -->
    <!-- ================================================ -->

    <Style x:Key="DefaultCheckBoxStyle" TargetType="{x:Type CheckBox}">
        <!-- Base Properties -->
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultControlBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CheckBox Visual -->
                        <Grid Width="18" Height="18" VerticalAlignment="Center">
                            <!-- Unchecked Border -->
                            <Border x:Name="CheckBoxBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"
                                    SnapsToDevicePixels="True"/>

                            <!-- Checked Background -->
                            <Border x:Name="CheckedBackground"
                                    Background="{DynamicResource AccentPrimaryBrush}"
                                    BorderBrush="{DynamicResource AccentPrimaryBrush}"
                                    BorderThickness="2"
                                    CornerRadius="3"
                                    Opacity="0"
                                    SnapsToDevicePixels="True"/>

                            <!-- Check Mark (✓) -->
                            <Path x:Name="CheckMark"
                                  Data="M 0,4 L 3,7 L 8,0"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Stretch="Uniform"
                                  Margin="3"
                                  Opacity="0"
                                  SnapsToDevicePixels="True"/>

                            <!-- Indeterminate Mark (—) -->
                            <Path x:Name="IndeterminateMark"
                                  Data="M 0,0 L 8,0"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Stretch="Uniform"
                                  Margin="3"
                                  VerticalAlignment="Center"
                                  Opacity="0"
                                  SnapsToDevicePixels="True"/>

                            <!-- Focus Border -->
                            <Border x:Name="FocusBorder"
                                    BorderBrush="{DynamicResource AccentPrimaryBrush}"
                                    BorderThickness="2"
                                    CornerRadius="3"
                                    Opacity="0"
                                    IsHitTestVisible="False"
                                    SnapsToDevicePixels="True"/>
                        </Grid>

                        <!-- Content -->
                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderHoverBrush}"/>
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderPressedBrush}"/>
                        </Trigger>

                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckedBackground" Property="Opacity" Value="1"/>
                            <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                            <Setter TargetName="CheckBoxBorder" Property="Opacity" Value="0"/>
                        </Trigger>

                        <!-- Checked + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Checked + Pressed -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                        </MultiTrigger>

                        <!-- Indeterminate State -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckedBackground" Property="Opacity" Value="1"/>
                            <Setter TargetName="IndeterminateMark" Property="Opacity" Value="1"/>
                            <Setter TargetName="CheckBoxBorder" Property="Opacity" Value="0"/>
                        </Trigger>

                        <!-- Indeterminate + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="{x:Null}"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Indeterminate + Pressed -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="{x:Null}"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                        </MultiTrigger>

                        <!-- Focus State -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="CheckBoxBorder" Property="Background"
                                    Value="{DynamicResource DefaultControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush"
                                    Value="{DynamicResource DefaultControlBorderDisabledBrush}"/>
                            <Setter TargetName="ContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                        <!-- Disabled + Checked -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="CheckMark" Property="Opacity" Value="0.6"/>
                        </MultiTrigger>

                        <!-- Disabled + Indeterminate -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="{x:Null}"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedBackground" Property="Background"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="CheckedBackground" Property="BorderBrush"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="IndeterminateMark" Property="Opacity" Value="0.6"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}"/>

    <!-- ================================================ -->
    <!--   DEFAULT RADIOBUTTON STYLE                     -->
    <!--   Material Design RadioButton                    -->
    <!-- ================================================ -->

    <Style x:Key="DefaultRadioButtonStyle" TargetType="{x:Type RadioButton}">
        <!-- Base Properties -->
        <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultControlBorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- RadioButton Visual -->
                        <Grid Width="18" Height="18" VerticalAlignment="Center">
                            <!-- Outer Circle (Unchecked Border) -->
                            <Ellipse x:Name="OuterCircle"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}"
                                     Fill="{TemplateBinding Background}"
                                     SnapsToDevicePixels="True"/>

                            <!-- Checked Outer Circle -->
                            <Ellipse x:Name="CheckedOuterCircle"
                                     Stroke="{DynamicResource AccentPrimaryBrush}"
                                     StrokeThickness="2"
                                     Fill="Transparent"
                                     Opacity="0"
                                     SnapsToDevicePixels="True"/>

                            <!-- Inner Circle (Checked Indicator) -->
                            <Ellipse x:Name="InnerCircle"
                                     Fill="{DynamicResource AccentPrimaryBrush}"
                                     Width="8"
                                     Height="8"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Opacity="0"
                                     SnapsToDevicePixels="True"/>

                            <!-- Focus Circle -->
                            <Ellipse x:Name="FocusCircle"
                                     Stroke="{DynamicResource AccentPrimaryBrush}"
                                     StrokeThickness="2"
                                     Fill="Transparent"
                                     Opacity="0"
                                     IsHitTestVisible="False"
                                     SnapsToDevicePixels="True"/>
                        </Grid>

                        <!-- Content -->
                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke"
                                    Value="{DynamicResource DefaultControlBorderHoverBrush}"/>
                        </Trigger>

                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke"
                                    Value="{DynamicResource DefaultControlBorderPressedBrush}"/>
                        </Trigger>

                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckedOuterCircle" Property="Opacity" Value="1"/>
                            <Setter TargetName="InnerCircle" Property="Opacity" Value="1"/>
                            <Setter TargetName="OuterCircle" Property="Opacity" Value="0"/>
                        </Trigger>

                        <!-- Checked + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedOuterCircle" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                            <Setter TargetName="InnerCircle" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Checked + Pressed -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedOuterCircle" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                            <Setter TargetName="InnerCircle" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryPressedBrush}"/>
                        </MultiTrigger>

                        <!-- Focus State -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusCircle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FocusCircle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="OuterCircle" Property="Fill"
                                    Value="{DynamicResource DefaultControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="OuterCircle" Property="Stroke"
                                    Value="{DynamicResource DefaultControlBorderDisabledBrush}"/>
                            <Setter TargetName="ContentPresenter" Property="Opacity"
                                    Value="{DynamicResource DefaultControlDisabledOpacity}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                        <!-- Disabled + Checked -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CheckedOuterCircle" Property="Stroke"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="InnerCircle" Property="Fill"
                                    Value="{DynamicResource AccentPrimaryDisabledBrush}"/>
                            <Setter TargetName="InnerCircle" Property="Opacity" Value="0.6"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButtonStyle}"/>

</ResourceDictionary>