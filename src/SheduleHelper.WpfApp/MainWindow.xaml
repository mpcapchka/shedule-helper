<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1" Margin="20">
            <!-- TabControl Demo -->
            <TabControl Style="{StaticResource DefaultTabControlStyle}">

                <!-- Tab 1: Overview -->
                <TabItem Header="Overview">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="TabControl Overview"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="This is a custom-styled TabControl demonstrating Material Design principles."
                                       FontSize="14"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Features:"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,12,0,8"/>

                            <StackPanel Margin="20,0,0,0">
                                <TextBlock Text="• Clean, modern tab headers with hover effects"
                                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                           Margin="0,4"/>
                                <TextBlock Text="• Active tab indicator with accent color"
                                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                           Margin="0,4"/>
                                <TextBlock Text="• Smooth transitions and animations"
                                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                           Margin="0,4"/>
                                <TextBlock Text="• Supports different TabStripPlacement options"
                                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                           Margin="0,4"/>
                                <TextBlock Text="• Consistent with application theme"
                                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                           Margin="0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 2: Controls Demo -->
                <TabItem Header="Controls">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Control Samples"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,20"/>

                            <!-- Buttons -->
                            <TextBlock Text="Buttons:" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Button Content="Default Button" Margin="0,0,8,0"/>
                                <Button Content="Primary Button" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                <Button Content="Disabled" IsEnabled="False"/>
                            </StackPanel>

                            <!-- CheckBoxes -->
                            <TextBlock Text="CheckBoxes:" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,8"/>
                            <StackPanel Margin="0,0,0,20">
                                <CheckBox Content="Option 1" IsChecked="True" Margin="0,4"/>
                                <CheckBox Content="Option 2" Margin="0,4"/>
                                <CheckBox Content="Disabled" IsEnabled="False" Margin="0,4"/>
                            </StackPanel>

                            <!-- RadioButtons -->
                            <TextBlock Text="RadioButtons:" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,8"/>
                            <StackPanel Margin="0,0,0,20">
                                <RadioButton Content="Choice A" IsChecked="True" Margin="0,4" GroupName="Demo"/>
                                <RadioButton Content="Choice B" Margin="0,4" GroupName="Demo"/>
                                <RadioButton Content="Choice C" Margin="0,4" GroupName="Demo"/>
                            </StackPanel>

                            <!-- Slider -->
                            <TextBlock Text="Slider:" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,8"/>
                            <Slider Minimum="0" Maximum="100" Value="50" Width="300"
                                    HorizontalAlignment="Left" Margin="0,0,0,20"/>

                            <!-- ComboBox -->
                            <TextBlock Text="ComboBox:" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,8"/>
                            <ComboBox Width="300" HorizontalAlignment="Left" SelectedIndex="0">
                                <ComboBoxItem Content="Option 1"/>
                                <ComboBoxItem Content="Option 2"/>
                                <ComboBoxItem Content="Option 3"/>
                                <ComboBoxItem Content="Option 4"/>
                            </ComboBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 3: Settings -->
                <TabItem Header="Settings">
                    <StackPanel Margin="20">
                        <TextBlock Text="Application Settings"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Theme:" FontWeight="Medium"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   Margin="0,0,0,8"/>
                        <Button x:Name="SwitchThemeButtonInTab"
                                Content="Switch Theme"
                                Click="SwitchThemeButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"/>

                        <TextBlock Text="Notifications:" FontWeight="Medium"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   Margin="0,0,0,8"/>
                        <CheckBox Content="Enable desktop notifications" IsChecked="True" Margin="0,4"/>
                        <CheckBox Content="Enable sound alerts" IsChecked="False" Margin="0,4"/>

                        <TextBlock Text="Language:" FontWeight="Medium"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   Margin="0,20,0,8"/>
                        <ComboBox Width="200" HorizontalAlignment="Left" SelectedIndex="0">
                            <ComboBoxItem Content="English"/>
                            <ComboBoxItem Content="Spanish"/>
                            <ComboBoxItem Content="French"/>
                            <ComboBoxItem Content="German"/>
                        </ComboBox>
                    </StackPanel>
                </TabItem>

                <!-- Tab 4: About -->
                <TabItem Header="About">
                    <StackPanel Margin="20" VerticalAlignment="Center">
                        <TextBlock Text="Schedule Helper"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="Version 1.0.0"
                                   FontSize="14"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>

                        <TextBlock Text="A modern WPF application demonstrating Material Design principles and custom control styling."
                                   FontSize="14"
                                   Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="400"
                                   Margin="0,0,0,24"/>

                        <Button Content="Visit GitHub"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem>

                <!-- Tab 5: Disabled Example -->
                <TabItem Header="Disabled" IsEnabled="False">
                    <TextBlock Text="This tab is disabled"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </TabItem>

            </TabControl>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"
                    Panel.ZIndex="100"/>
        </Grid>
    </Grid>
</Window>
