<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1">
            <!-- Main Content Area -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="ToolTip Samples" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,20"/>

                <!-- Simple ToolTip -->
                <TextBlock Text="Simple ToolTip:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,8"/>
                <Button Content="Hover over me" Width="300" Margin="0,4"
                        ToolTip="This is a simple tooltip"/>

                <!-- ToolTip with custom content -->
                <TextBlock Text="ToolTip with Icon:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Content="Information Button" Width="300" Margin="0,4">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ℹ️" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Click to view more details"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <!-- Multiline ToolTip -->
                <TextBlock Text="Multiline ToolTip:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Content="Complex Information" Width="300" Margin="0,4">
                    <Button.ToolTip>
                        <ToolTip MaxWidth="250">
                            <StackPanel>
                                <TextBlock Text="User Information" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBlock Text="Name: John Doe" Margin="0,2"/>
                                <TextBlock Text="Email: john.doe@example.com" Margin="0,2"/>
                                <TextBlock Text="Status: Active" Margin="0,2"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <!-- ToolTip on TextBox -->
                <TextBlock Text="ToolTip on TextBox:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <TextBox Width="300" Margin="0,4" Text="Enter your name"
                         ToolTip="Type your full name here"/>

                <!-- ToolTip on Disabled Control -->
                <TextBlock Text="ToolTip on Disabled Control:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Content="Disabled Button" Width="300" Margin="0,4" IsEnabled="False"
                        ToolTip="This action is currently unavailable"
                        ToolTipService.ShowOnDisabled="True"/>

                <!-- ToolTip with Different Placement -->
                <TextBlock Text="Bottom Placement ToolTip:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Content="ToolTip Below" Width="300" Margin="0,4"
                        ToolTip="This tooltip appears below the button"
                        ToolTipService.Placement="Bottom"/>

                <!-- Rich Content ToolTip -->
                <TextBlock Text="Rich Content ToolTip:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Content="Feature Button" Width="300" Margin="0,4" Style="{StaticResource PrimaryButtonStyle}">
                    <Button.ToolTip>
                        <ToolTip MaxWidth="280">
                            <StackPanel>
                                <TextBlock Text="⚡ Premium Feature" FontWeight="Bold" FontSize="13" Margin="0,0,0,6"/>
                                <TextBlock Text="This feature includes:" Margin="0,0,0,4"/>
                                <TextBlock Text="• Advanced analytics dashboard" Margin="4,2"/>
                                <TextBlock Text="• Export to multiple formats" Margin="4,2"/>
                                <TextBlock Text="• Priority support" Margin="4,2"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

            </StackPanel>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="16"/>
        </Grid>
    </Grid>
</Window>
