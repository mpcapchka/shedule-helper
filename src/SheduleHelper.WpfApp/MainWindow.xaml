<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1">
            <!-- Main Content Area -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Hyperlink Button Samples" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,20"/>

                <!-- Basic Hyperlinks -->
                <TextBlock Text="Basic Hyperlinks:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,8"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="Click here to learn more"
                        Margin="0,4"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="Visit our documentation"
                        Margin="0,4"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="Go to settings"
                        Margin="0,4"/>

                <!-- Inline Hyperlinks in Text -->
                <TextBlock Text="Inline Usage:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <TextBlock TextWrapping="Wrap" Margin="0,4">
                    <Run Text="You can use hyperlink buttons inline with text. For example, "
                         Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
                    <InlineUIContainer>
                        <Button Style="{StaticResource HyperlinkButtonStyle}"
                                Content="click this link"
                                Padding="0"
                                Margin="0,-2,0,0"/>
                    </InlineUIContainer>
                    <Run Text=" to continue reading or "
                         Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
                    <InlineUIContainer>
                        <Button Style="{StaticResource HyperlinkButtonStyle}"
                                Content="visit help center"
                                Padding="0"
                                Margin="0,-2,0,0"/>
                    </InlineUIContainer>
                    <Run Text=" for more information."
                         Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
                </TextBlock>

                <!-- Navigation Links -->
                <TextBlock Text="Navigation Links:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <Button Style="{StaticResource HyperlinkButtonStyle}" Content="Home" Margin="0,0,16,0"/>
                    <Button Style="{StaticResource HyperlinkButtonStyle}" Content="About" Margin="0,0,16,0"/>
                    <Button Style="{StaticResource HyperlinkButtonStyle}" Content="Contact" Margin="0,0,16,0"/>
                    <Button Style="{StaticResource HyperlinkButtonStyle}" Content="Help"/>
                </StackPanel>

                <!-- Disabled State -->
                <TextBlock Text="Disabled State:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="This link is disabled"
                        IsEnabled="False"
                        Margin="0,4"/>

                <!-- Action Links -->
                <TextBlock Text="Action Links:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="⚙ Open Settings"
                        Margin="0,4"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="📄 View Documentation"
                        Margin="0,4"/>
                <Button Style="{StaticResource HyperlinkButtonStyle}"
                        Content="🔗 Share Link"
                        Margin="0,4"/>
            </StackPanel>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="16"/>
        </Grid>
    </Grid>
</Window>
