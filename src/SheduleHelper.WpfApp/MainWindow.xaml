<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Main Content Area with ScrollViewer -->
            <Border Background="{DynamicResource LayerBackgroundSubtleBrush}"
                    BorderBrush="{DynamicResource LayerBorderDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Text="ScrollBar Demo" FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                               Margin="0,0,0,12"/>

                    <!-- ScrollViewer with Custom Style -->
                    <ScrollViewer Grid.Row="1"
                                  Style="{StaticResource DefaultScrollViewerStyle}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Vertical Scrolling Content" FontSize="16" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,16"/>

                            <!-- Horizontal Scrolling Content -->
                            <TextBlock Text="Horizontal Scrolling Content" FontSize="16" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,12"/>

                            <Border Background="{DynamicResource LayerBackgroundElevatedBrush}"
                                    BorderBrush="{DynamicResource LayerBorderSubtleBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Button 1" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 2" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 3" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 4" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 5" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 6" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 7" Margin="0,0,8,0" MinWidth="100"/>
                                    <Button Content="Button 8" MinWidth="100"/>
                                </StackPanel>
                            </Border>

                            <!-- More Vertical Content -->
                            <TextBlock Text="Additional Content" FontSize="16" FontWeight="Medium"
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti."
                                       Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"/>
        </Grid>
    </Grid>
</Window>
