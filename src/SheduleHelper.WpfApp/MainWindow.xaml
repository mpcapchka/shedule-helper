<Window x:Class="SheduleHelper.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:SheduleHelper.WpfApp"
        mc:Ignorable="d" MinWidth="600" MinHeight="320"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource LayerBackgroundFloatingBrush}"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Base button style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Foreground" Value="{DynamicResource DefaultControlForegroundDefaultBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{DynamicResource DefaultControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button special case -->
        <Style x:Key="WindowCloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#C50F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="32"
            CornerRadius="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- custom titlebar -->
        <Border Height="32" Background="Transparent" x:Name="TitleBar"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel VerticalAlignment="Center" LastChildFill="True">
                <TextBlock Text="MyApp" VerticalAlignment="Center" Margin="12,0" 
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           WindowChrome.IsHitTestVisibleInChrome="True"/>
                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" 
                            VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeRestore_Click">
                        <TextBlock Text="&#xE922;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons" FontSize="12"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- rest of UI -->
        <Grid Grid.Row="1">
            <!-- Main Content Area -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="ProgressBar Samples" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,20"/>

                <!-- 25% Progress -->
                <TextBlock Text="25% Progress:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,0,0,8"/>
                <ProgressBar Width="300" Margin="0,4" Value="25" Maximum="100"/>

                <!-- 50% Progress -->
                <TextBlock Text="50% Progress:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Margin="0,4" Value="50" Maximum="100"/>

                <!-- 75% Progress -->
                <TextBlock Text="75% Progress:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Margin="0,4" Value="75" Maximum="100"/>

                <!-- 100% Progress (Complete) -->
                <TextBlock Text="100% Progress (Complete):" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Margin="0,4" Value="100" Maximum="100"/>

                <!-- Indeterminate Progress -->
                <TextBlock Text="Indeterminate Progress:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Margin="0,4" IsIndeterminate="True"/>

                <!-- Thin Progress (Height 4) -->
                <TextBlock Text="Thin Progress (4px height):" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Height="4" Margin="0,4" Value="60" Maximum="100"/>

                <!-- Thick Progress (Height 16) -->
                <TextBlock Text="Thick Progress (16px height):" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Height="16" Margin="0,4" Value="40" Maximum="100"/>

                <!-- Disabled Progress -->
                <TextBlock Text="Disabled Progress:" FontWeight="Medium"
                           Foreground="{DynamicResource DefaultControlForegroundDefaultBrush}"
                           Margin="0,20,0,8"/>
                <ProgressBar Width="300" Margin="0,4" Value="65" Maximum="100" IsEnabled="False"/>

            </StackPanel>

            <!-- Theme Switch Button in Bottom-Right Corner -->
            <Button x:Name="SwitchThemeButton"
                    Content="Switch Theme"
                    Click="SwitchThemeButton_Click"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="16"/>
        </Grid>
    </Grid>
</Window>
